<!-- recipes start-->

<section class="py-4">
  <div class="d-flex mt-2 mb-3 align-items-center">
    <h2><%- categoryName %> recipes</h2>
  </div>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item" aria-current="page">
        <a href="/categories">Categories</a>
      </li>
      <li class="breadcrumb-item active" aria-current="page">
        <%- categoryName %>
      </li>
    </ol>
  </nav>

  <div class="row row-cols-2 row-cols-lg-4 g-2 g-lg-3">
    <% if (recipes!='undefined') { %> <% recipes.forEach(item => { %>
    <a href="/recipe/<%- item._id %>  " class="col text-center category__link">
      <div class="category__img category__img--large shadow">
        <img
          src="/uploads/<%- item.image %> "
          alt="Jellof rice"
          loading="lazy"
          class="sd"
        />
      </div>
      <div class="pt-1"><%- item.name %></div> </a
    ><% }) %> <% } %>
  </div>
</section>

<!--  recipes end-->
