<!--Header start-->

<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
  <div class="col-12 col-lg-6">
    <img
      src="/img/hero.jpg"
      alt=""
      width=""
      height="200"
      class="d-block mc-lg-auto img-fluid"
    />
  </div>
  <div class="col-12 col-lg-6">
    <h1 class="display-5 fw-bold mb-3">
      Huge selection of all Africa's finest delicouses
    </h1>

    <p class="lead">
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Praesentium
      officia molestiae sunt nulla tempora error fugiat reiciendis quis tempore
      commodi.
    </p>
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
      <a href="/latest" class="btn btn-primary btn-dark px-4 me-md-2"
        >Explore our latest recipes</a
      >
      <a href="/random" class="btn btn-outline-secondary px-4 me-md-2"
        >Get a random recipe</a
      >
    </div>
  </div>
</div>
<!--Header end-->

<!--Categories start-->
<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
  <% if (categories!='') { %> <% categories.forEach(category => { %>

  <a
    href="/categories/<%- category.name %> "
    class="col text-center category__link"
  >
    <div class="category__img shadow">
      <img
        src="/img/<%- category.image %> "
        alt="<%- category.name %> "
        loading="lazy"
      />
    </div>
    <div class="pt-1"><%- category.name%></div>
  </a>
  <% }) %> <% } %>

  <a href="/categories" class="col text-center category__link">
    <div class="category__img shadow">
      <img
        src="/img/view-al.jpg"
        alt="Nigerian cuisine"
        loading="lazy"
        class="sd"
      />
    </div>
    <div class="pt-1">View all</div>
  </a>
</div>
<!--Categories start-->

<!-- Latest recipes start-->
<% if (food.latest!='') { %>
<section class="py-4">
  <div class="d-flex mt-2 align-items-center">
    <h2>Latest recipes</h2>
    <a href="/explore-latest" class="ms-auto">View more</a>
  </div>

  <div class="row row-cols-2 row-cols-lg-4 g-2 g-lg-3">
    <% if (food.latest!='undefined'&& food.latest.length>0) { %> <%
    food.latest.forEach(item => { %>
    <a href="/recipe/<%- item._id %>  " class="col text-center category__link">
      <div class="category__img category__img--large shadow">
        <img
          src="/uploads/<%- item.image %> "
          alt="Jellof rice"
          loading="lazy"
          class="sd"
        />
      </div>
      <div class="pt-1"><%- item.name %></div> </a
    ><% }) %> <% } %>
  </div>
</section>
<% } %>

<!-- Latest recipes start-->

