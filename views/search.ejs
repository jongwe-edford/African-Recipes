<h1 class="pb-4">Results for <%- searchTerm %></h1>
<div class="row row-cols-2 row-cols-lg-4 g-2 g-lg-3 mt-3">
  <% if (recipes!='undefined') { %> <% recipes.forEach(item => { %>
  <a href="/recipe/<%- item._id %>  " class="col text-center category__link">
    <div class="category__img category__img--large shadow">
      <img
        src="/uploads/<%- item.image %> "
        alt="Jellof rice"
        loading="lazy"
        class="sd"
      />
    </div>
    <div class="pt-1"><%- item.name %></div> </a
  ><% }) %> <% } %>
</div>
